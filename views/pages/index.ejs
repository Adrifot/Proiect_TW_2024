            <section id="static-gallery">
                <h3>Galerie</h3>
                <div id="gallery-grid">
                    <% let currHour = new Date().getHours(); %>
                    <% let filteredImgs = locals.images.filter(image => {
                        let startTime = parseInt(image.time.split("-")[0].trim().split(":")[0]);
                        let endTime = parseInt(image.time.split("-")[1].trim().split(":")[0]);
                        if(startTime <= currHour && endTime >= currHour) return true;
                        if(startTime >= endTime && (currHour >= startTime || currHour <= endTime)) return true;
                        return false;
                    }); %>
                    <% let displayedImgs = filteredImgs.slice(0, 10); %>
                    <% for(let img of displayedImgs) { %>
                        <figure>
                            <picture>
                                <source src="<%= img.filename_medium %>" media="(max-width: 1280px)">
                                <img src="<%= img.filename %>" alt="<%= img.title %>">
